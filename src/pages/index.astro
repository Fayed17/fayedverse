
---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home | UI/UX Design Portfolio">
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-slate-50 to-slate-100 section-padding">
    <div class="portfolio-container">
      <div class="flex flex-col md:flex-row gap-10 items-center">
        <div class="flex-1">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-navy">
            UI/UX Designer Creating Modern Experiences
          </h1>
          <p class="text-lg text-slate-700 mb-8">
            Crafting beautiful interfaces with Figma, Framer, and Webflow to bring digital products to life.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/portfolio" class="bg-navy hover:bg-navy/90 text-white px-6 py-3 rounded font-medium">
              View Portfolio
            </a>
            <a href="/about" class="border border-gray-300 hover:border-gray-400 px-6 py-3 rounded font-medium">
              About Me
            </a>
          </div>
        </div>
        <div class="flex-1 relative">
          <div class="aspect-square rounded-lg bg-gradient-to-br from-teal to-purple opacity-80"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <img 
              src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=600&h=600" 
              alt="Designer workspace" 
              class="w-[90%] h-[90%] object-cover rounded-lg shadow-xl"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {/* Featured Projects */}
  <section class="bg-slate-50 section-padding">
    <div class="portfolio-container">
      <div class="text-center mb-14">
        <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
        <p class="text-slate-600 max-w-xl mx-auto">
          A selection of my recent design work across different platforms.
        </p>
      </div>
      
      <div class="project-grid">
        {[1, 2, 3].map((i) => (
          <a href="/portfolio" class="group">
            <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow">
              <div class="aspect-video bg-slate-200 relative overflow-hidden">
                <img 
                  src={`https://images.unsplash.com/photo-148${i}312338219-ce68d2c6f44d?auto=format&fit=crop&w=600&h=350`} 
                  alt={`Featured project ${i}`}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-3 left-3 bg-white px-2 py-1 rounded-md text-xs font-medium">
                  {i === 1 ? 'Figma' : i === 2 ? 'Framer' : 'Webflow'}
                </div>
              </div>
              <div class="p-5">
                <h3 class="font-semibold text-lg mb-1">Project Title {i}</h3>
                <p class="text-slate-600 text-sm">
                  A short description of this amazing design project.
                </p>
              </div>
            </div>
          </a>
        ))}
      </div>
      
      <div class="mt-10 text-center">
        <a href="/portfolio" class="border border-gray-300 hover:border-gray-400 px-6 py-3 rounded font-medium">
          View All Projects
        </a>
      </div>
    </div>
  </section>
</MainLayout>
